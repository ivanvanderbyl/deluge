<button tabindex={{tabIndex}} class="trigger" onclick={{action "toggle"}} disabled={{disabled}}>
  {{#if (hasBlock "inverse")}}
    {{yield to="inverse"}}
  {{else}}
    {{label}}
  {{/if}}
</button>

{{#if isOpen}}
  {{#ember-wormhole
    to=destinationElementId
    renderInPlace=renderInPlace
  }}
    <deluge-menu-button-content style={{computedPositionStyle}}>{{yield publicAPI}}</deluge-menu-button-content>
  {{/ember-wormhole}}
{{/if}}