{{#deluge-menu-button
  disabled=disabled
  multiple=multiple
  ignoreSelect=ignoreSelect
  selection=selection
  triggerAttachment=triggerAttachment
  dropdownAttachment=dropdownAttachment
  as |button|}}
  {{yield (hash
    menu=(component "deluge-menu" dropdown=this)
  )}}
{{else}}
  {{#if (hasBlock "inverse")}}
    {{yield to="inverse"}}
  {{else}}
    {{label}}
  {{/if}}
{{/deluge-menu-button}}