{{#deluge-menu-button
  disabled=disabled
  ignoreSelect=ignoreSelect
  selection=selection
  triggerAttachment=triggerAttachment
  dropdownAttachment=dropdownAttachment
  as |button|}}
  {{yield selection}}
{{else}}
  {{#if (hasBlock "inverse")}}
    {{yield to="inverse"}}
  {{else}}
    {{label}}
  {{/if}}
{{/deluge-menu-button}}