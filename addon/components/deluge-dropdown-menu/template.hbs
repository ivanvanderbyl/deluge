{{#deluge-menu-button
  menu=this
  isOpen=isOpen
  disabled=disabled
  ignoreSelect=ignoreSelect
  triggerAttachment=triggerAttachment
  dropdownAttachment=dropdownAttachment
  renderInPlace=renderInPlace
  as |button|}}

  {{#deluge-menu
    dropdown=this
    disabled=disabled
    multiple=multiple
    selection=selection
    action=(action "itemSelected")
  as |menu|}}
    {{yield menu}}
  {{/deluge-menu}}
{{else}}
  {{#if (hasBlock "inverse")}}
    {{yield to="inverse"}}
  {{else}}
    {{label}}
  {{/if}}
{{/deluge-menu-button}}